<?xml version="1.0" encoding="utf-8" ?>
<widget id="BootstrapInputAddons.widget.BootstrapInputAddons" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>BootstrapInputAddons</name>
    <description>This widget gives the possibility to use bootstrap input add-ons on normal fields.</description>

    <icon />

    <properties>
        <property key="fieldAttribute" type="attribute">
            <caption>Attribute (path)</caption>
            <category>Appearance</category>
            <description/>
            <attributeTypes>
                <attributeType name="String" />
                <attributeType name="AutoNumber" />
                <attributeType name="Binary" />
                <attributeType name="Boolean" />
                <attributeType name="Currency" />
                <attributeType name="DateTime" />
                <attributeType name="Decimal" />
                <attributeType name="Enum" />
                <attributeType name="Float" />
                <attributeType name="HashString" />
                <attributeType name="Integer" />
                <attributeType name="Long" />
            </attributeTypes>
        </property>
        <property key="isRequired" type="boolean" required="true" defaultValue="false">
            <caption>Required</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="requiredMessage" type="string" required="false" defaultValue="">
            <caption>Required message</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="showLabel" type="boolean" required="true" defaultValue="false">
            <caption>Show label</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="labelCaption" type="string" required="false" defaultValue="">
            <caption>Label caption</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="showLeftAddon" type="boolean" required="true" defaultValue="false">
            <caption>Show left add-on</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="leftAddonCaption" type="string" required="false" defaultValue="">
            <caption>Left add-on caption</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="showRightAddon" type="boolean" required="true" defaultValue="false">
            <caption>Show right add-on</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="rightAddonCaption" type="string" required="false" defaultValue="">
            <caption>Right add-on caption</caption>
            <category>Appearance</category>
            <description/>
        </property>
        
        <property key="onChange" type="microflow" required="false" defaultValue="">
            <caption>On Change</caption>
            <category>Behavior</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onEnter" type="microflow" required="false" defaultValue="">
            <caption>On Enter</caption>
            <category>Behavior</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onLeave" type="microflow" required="false" defaultValue="">
            <caption>On Leave</caption>
            <category>Behavior</category>
            <description/>
            <returnType type="Void" />
        </property>
        
    </properties>
</widget>

